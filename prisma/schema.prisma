generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  searchHistory SearchHistory[]
  savedResources SavedResource[]

  createdAt     DateTime  @default(now())
  roadmaps      Roadmap[]
  activities    Activity[]
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SearchHistory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?  @db.ObjectId
  query     String
  createdAt DateTime @default(now())
  user User ? @relation(fields: [userId] , references: [id] , onDelete:Cascade)
}
  
model SavedResource {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  title     String
  url       String
  source    String
  createdAt DateTime @default(now())
  user User @relation(fields: [userId],references: [id] , onDelete:Cascade)
}
model SearchCache {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  query     String   @unique 
  data      Json     
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Roadmap {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  topic     String
  status    String   @default("active") // "active", "completed", "archived"
  currentStep Int    @default(0)
  
  content   Json
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Activity {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  action    String   // "VIEW_RESOURCE", "COMPLETE_STEP"
  topic     String   // "React", "Python"
  metadata  Json?    
  
  createdAt DateTime @default(now())
}
